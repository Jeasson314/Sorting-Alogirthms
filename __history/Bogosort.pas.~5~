unit Bogosort;

interface
uses index;
type TIntegerArray = Array of Integer;
function Sort(arrInput: TIntegerArray): TIntegerArray;
implementation
procedure shuffle(max:integer;arrInput:TIntegerArray);
var
  i,k,tmp: integer;
begin
  for i := max downto 2 do begin
     k := random(i) + 1;
     if (arrInput[i] <> arrInput[k]) then begin
       tmp := arrInput[i]; arrInput[i] := arrInput[k]; arrInput[k] := tmp
     end
  end
end;
function sorted(max:integer;arrInput:TIntegerArray): boolean;
var
  i: integer;
begin
  sorted := True;
  for i := 2 to max do
    if (arrInput[i - 1] > arrInput[i]) then begin
      sorted := False; exit
    end
end;
function Sort(arrInput: TIntegerArray): TIntegerArray;
var
  i: integer;
begin
  i := 1; randomize;
  write(i,': '); printa(a);
  while not sorted(a) do begin
    shuffle(a);
    i := i + 1; write(i,': '); printa(a)
  end
end;

end.
