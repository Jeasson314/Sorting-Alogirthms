unit Bogosort;

interface
type TIntegerArray = Array of Integer;

function Sort(arrInput: TIntegerArray): TIntegerArray;
implementation
procedure shuffle(arrInput:TIntegerArray);
var
  i,k,tmp,max: integer;
begin
max:=length(arrInput);
  for i := max downto 2 do begin
     k := random(i) + 1;
     if (arrInput[i] <> arrInput[k]) then begin
       tmp := arrInput[i]; arrInput[i] := arrInput[k]; arrInput[k] := tmp
     end
  end
end;
function sorted(arrInput:TIntegerArray): boolean;
var
  max,i: integer;
begin
max:=length(arrInput);
  sorted := True;
  for i := 2 to max do
    if (arrInput[i - 1] > arrInput[i]) then begin
      sorted := False; exit
    end
end;
function Sort(arrInput: TIntegerArray): TIntegerArray;
var
  i: integer;
begin
  i := 1; randomize;
  while not sorted(arrInput) do begin
    shuffle(arrInput);
end;
   result := arrInput;
end;

end.
